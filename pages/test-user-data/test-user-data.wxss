/* pages/test-user-data/test-user-data.wxss */
.test-container {
  padding: 0 30rpx 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  height: 88rpx;
  background: #ff6b35;
  color: white;
  position: relative;
  margin: 0 -30rpx 30rpx;
  padding: 0 30rpx;
}

.nav-back {
  font-size: 36rpx;
  font-weight: bold;
  padding: 10rpx;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  font-weight: bold;
}

/* 当前用户信息 */
.current-user {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.user-info text {
  font-size: 28rpx;
  color: #666;
}

/* 测试按钮区域 */
.test-buttons {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.test-btn {
  width: 100%;
  height: 80rpx;
  background: #ff6b35;
  color: white;
  border: none;
  border-radius: 15rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.test-btn:last-of-type {
  margin-bottom: 30rpx;
}

.test-btn[disabled] {
  background: #ccc;
}

.clear-btn {
  width: 100%;
  height: 70rpx;
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 15rpx;
  font-size: 28rpx;
  margin-bottom: 0;
}

/* 测试结果 */
.test-results {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.result-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.result-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
  gap: 10rpx;
}

.result-type {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.result-status {
  font-size: 26rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.result-status.success {
  background: #e8f5e8;
  color: #52c41a;
}

.result-status.fail {
  background: #fff2f0;
  color: #ff4d4f;
}

.result-time {
  font-size: 24rpx;
  color: #999;
}

.result-details {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
}

/* 空状态 */
.empty-state {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}