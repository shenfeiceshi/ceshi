/* 小六日记详情页面样式 - 现代化设计 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF8F0 0%, #FFF5E6 100%);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.15);
  backdrop-filter: blur(20rpx);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: var(--status-bar-height, 0);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  backdrop-filter: blur(20rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.back-icon {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  backdrop-filter: blur(20rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.action-icon {
  font-size: 28rpx;
}

/* 日记卡片 */
.diary-card {
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 日记头部 */
.diary-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #FFF8F0;
}

.date-section {
  display: flex;
  flex-direction: column;
}

.date-main {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  line-height: 1.2;
}

.date-sub {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.mood-weather-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: flex-end;
}

.mood-item, .weather-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  background: #FFF8F0;
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 107, 53, 0.1);
}

.mood-emoji, .weather-emoji {
  font-size: 28rpx;
}

.mood-name, .weather-name {
  font-size: 24rpx;
  color: #666;
}

/* 日记内容 */
.diary-content {
  margin-bottom: 40rpx;
}

.content-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: #333;
  text-align: justify;
}

/* 日记图片 */
.diary-images {
  margin-bottom: 40rpx;
}

.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: calc(33.33% - 11rpx);
  aspect-ratio: 1;
  border-radius: 16rpx;
  overflow: hidden;
}

.diary-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.image-item:active .diary-image {
  transform: scale(0.95);
}

.ai-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 12rpx;
  padding: 4rpx 12rpx;
}

.ai-text {
  font-size: 20rpx;
  color: white;
  font-weight: bold;
}

/* 日记标签 */
.diary-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tag-item:active {
  transform: scale(0.95);
}

/* 日记统计 */
.diary-stats {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-top: 2rpx solid #FFF8F0;
}

.stats-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.stats-icon {
  font-size: 28rpx;
}

.stats-text {
  font-size: 24rpx;
  color: #666;
}

/* AI评价卡片 */
.ai-comment-card {
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.ai-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.ai-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.ai-info {
  flex: 1;
}

.ai-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.ai-desc {
  font-size: 24rpx;
  color: #999;
}

.ai-time {
  font-size: 22rpx;
  color: #ccc;
}

.ai-comment-content {
  margin-bottom: 30rpx;
}

.comment-bubble {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  position: relative;
}

.comment-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* AI评价操作 */
.ai-actions {
  display: flex;
  gap: 30rpx;
}

.ai-action-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  background: rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
}

.ai-action-btn:active {
  transform: scale(0.95);
}

.ai-action-btn.like.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-color: #667eea;
}

.ai-action-btn.like.active .action-text {
  color: white;
}

.action-emoji {
  font-size: 28rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

/* 生成AI评价按钮 */
.generate-ai-card {
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.generate-ai-card:active {
  transform: scale(0.98);
}

.generate-content {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
}

.generate-icon {
  font-size: 48rpx;
  margin-right: 30rpx;
}

.generate-text {
  flex: 1;
}

.generate-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 12rpx;
}

.generate-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.generate-arrow {
  font-size: 36rpx;
  color: #667eea;
  font-weight: bold;
}

/* AI评价生成中 */
.generating-ai-card {
  margin: 30rpx;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 53, 0.1);
  border: 2rpx solid rgba(255, 107, 53, 0.1);
}

.generating-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.generating-icon {
  display: flex;
  gap: 12rpx;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  background: #FF6B35;
  border-radius: 50%;
  animation: loading 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) { animation-delay: -0.32s; }
.loading-dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes loading {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.generating-text {
  font-size: 28rpx;
  color: #666;
}

/* 相关日记推荐 */
.related-section {
  margin: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.title-icon {
  font-size: 32rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.related-list {
  white-space: nowrap;
}

.related-item {
  display: inline-block;
  width: 280rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-right: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  vertical-align: top;
  white-space: normal;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.related-item:active {
  transform: scale(0.95);
}

.related-date {
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.related-preview {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.related-mood {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.mood-emoji {
  font-size: 24rpx;
}

.mood-name {
  font-size: 22rpx;
  color: #999;
}

/* 底部导航 */
.bottom-navigation {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.08);
  padding-bottom: env(safe-area-inset-bottom);
  backdrop-filter: blur(20rpx);
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  gap: 8rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.nav-item:active {
  transform: scale(0.95);
}

.nav-item.main {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 16rpx;
  margin: 8rpx;
}

.nav-item.main .nav-icon,
.nav-item.main .nav-text {
  color: white;
}

.nav-icon {
  font-size: 32rpx;
  color: #666;
}

.nav-text {
  font-size: 22rpx;
  color: #666;
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.share-options {
  display: flex;
  justify-content: space-around;
}

.share-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 30rpx;
}

.share-emoji {
  font-size: 48rpx;
}

.share-text {
  font-size: 24rpx;
  color: #666;
}

/* 底部安全区域 */
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .diary-card {
    margin: 20rpx;
    padding: 30rpx;
  }
  
  .date-main {
    font-size: 42rpx;
  }
  
  .content-text {
    font-size: 30rpx;
  }
}