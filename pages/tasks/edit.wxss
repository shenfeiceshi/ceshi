/* 任务编辑页面样式 - 基于新建任务设计规范 */
.page-container {
  background: #FCFAF7;
  min-height: 100vh;
  padding: 24rpx;
}

/* 表单容器 */
.form-container {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
  min-height: calc(100vh - 200rpx);
}

.form-item {
  margin-bottom: 48rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 32rpx;
  color: #1C170D;
  font-weight: 500;
  margin-bottom: 24rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 24rpx;
  font-size: 32rpx;
  background: #F8F9FA;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #FF6B35;
  background: #FFFFFF;
  box-shadow: 0 0 0 6rpx rgba(255, 107, 53, 0.1);
}

.form-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 24rpx 32rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 24rpx;
  font-size: 32rpx;
  background: #F8F9FA;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #FF6B35;
  background: #FFFFFF;
  box-shadow: 0 0 0 6rpx rgba(255, 107, 53, 0.1);
}

/* 分类网格 - 3列布局，缩小尺寸 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 24rpx;
}

.category-item {
  text-align: center;
  padding: 20rpx 12rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  border: 3rpx solid transparent;
  position: relative;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 分类颜色 */
.category-item[data-category="life"] {
  background: #95E1D3;
  color: #FFFFFF;
}

.category-item[data-category="study"] {
  background: #4ECDC4;
  color: #FFFFFF;
}

.category-item[data-category="health"] {
  background: #A8E6CF;
  color: #FFFFFF;
}

.category-item[data-category="work"] {
  background: #FF6B35;
  color: #FFFFFF;
}

.category-item[data-category="social"] {
  background: #FFB6C1;
  color: #FFFFFF;
}

.category-item[data-category="hobby"] {
  background: #DDA0DD;
  color: #FFFFFF;
}

.category-item[data-category="other"] {
  background: #D3D3D3;
  color: #FFFFFF;
}

.category-item.selected {
  border-color: #FF6B35;
  transform: scale(1.05);
  box-shadow: 0 6rpx 18rpx rgba(255, 107, 53, 0.3);
}

.category-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  line-height: 1;
}

.category-name {
  font-size: 22rpx;
  font-weight: 500;
  line-height: 1.2;
}

/* 积分选择器 */
.points-selector {
  display: flex;
  gap: 24rpx;
  margin-top: 24rpx;
  flex-wrap: wrap;
}

.points-item {
  padding: 16rpx 32rpx;
  background: #FFE66D;
  color: #FF6B35;
  border-radius: 32rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 4rpx solid transparent;
}

.points-item.selected {
  background: #FF6B35;
  color: #FFFFFF;
  border-color: #FF6B35;
}

/* 时间选择器 */
.time-picker {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 24rpx;
  background: #F8F9FA;
  margin-top: 24rpx;
  transition: all 0.3s ease;
}

.time-picker:active {
  border-color: #FF6B35;
  background: #FFFFFF;
}

.time-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  line-height: 1;
}

.time-text {
  flex: 1;
  font-size: 32rpx;
  color: #1C170D;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 重复选项 */
.repeat-options {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
  flex-wrap: wrap;
}

.repeat-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 16rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #666666;
  background: #F8F9FA;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.repeat-item.selected {
  border-color: #FF6B35;
  background: #FF6B35;
  color: #FFFFFF;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  background: #FCFAF7;
  border-top: 2rpx solid #E5E5E5;
}

.btn-secondary,
.btn-primary {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  border-radius: 56rpx;
  font-size: 36rpx;
  font-weight: 600;
  transition: all 0.2s ease-out;
  border: none;
}

.btn-secondary {
  background: transparent;
  border: 4rpx solid #E5E5E5;
  color: #666666;
}

.btn-primary {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8A65 100%);
  color: #FFFFFF;
  box-shadow: 0 16rpx 32rpx rgba(255, 107, 53, 0.3);
}

.btn-secondary:active {
  transform: scale(0.98);
}

.btn-primary:active {
  transform: scale(0.98);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .points-selector {
    justify-content: space-between;
  }
  
  .points-item {
    flex: 1;
    min-width: 0;
    text-align: center;
  }
  
  .repeat-options {
    flex-direction: column;
  }
  
  .repeat-item {
    flex: none;
  }
}