/* 任务列表页面样式 - 基于小六日记设计规范 */
.page-container {
  background: #FCFAF7;
  min-height: 100vh;
  padding: 24rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FF6B35;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666666;
}

/* 统计卡片 */
.stats-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #FF6B35;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #E0E0E0;
}

/* 筛选标签 */
.filter-tabs {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666666;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #FF6B35 0%, #FFE66D 100%);
  color: #FFFFFF;
  font-weight: 600;
}

/* 任务列表 */
.task-list {
  margin-bottom: 120rpx;
}

.task-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  padding: 24rpx;
  transition: all 0.3s ease;
}

.task-item.completed {
  opacity: 0.7;
  background: #F0F8F0;
}

.task-content {
  flex: 1;
  display: flex;
  align-items: center;
}

.task-checkbox {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #E0E0E0;
  border-radius: 25rpx;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.task-checkbox.checked {
  background: #4ECDC4;
  border-color: #4ECDC4;
}

.check-icon {
  width: 30rpx;
  height: 30rpx;
}

.task-info {
  flex: 1;
}

.task-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.task-item.completed .task-title {
  text-decoration: line-through;
  color: #999999;
}

.task-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.task-category {
  font-size: 24rpx;
  color: #666666;
  background: #95E1D3;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.task-points {
  font-size: 24rpx;
  color: #FF6B35;
  font-weight: 600;
  background: #FFE66D;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.task-time {
  font-size: 24rpx;
  color: #999999;
}

.task-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
}

.action-btn.edit {
  background: rgba(78, 205, 196, 0.2);
}

.action-btn.delete {
  background: rgba(255, 107, 53, 0.2);
}

.action-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 为没有图标的情况添加文字图标 */
.action-btn.edit::after {
  content: "✏️";
  font-size: 24rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.action-btn.delete::after {
  content: "🗑️";
  font-size: 24rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 32rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 24rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #CCCCCC;
  line-height: 1.5;
}

/* 添加任务按钮 */
.add-task-btn {
  position: fixed;
  bottom: 32rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #FF6B35 0%, #4ECDC4 100%);
  color: #FFFFFF;
  border-radius: 50rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.3);
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.add-task-btn:active {
  transform: translateX(-50%) scale(0.98);
}

.add-icon {
  width: 32rpx;
  height: 32rpx;
}