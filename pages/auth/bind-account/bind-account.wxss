/* 账号绑定页面样式 */
.bind-account-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  padding-bottom: 40rpx;
}

/* 头部区域 */
.header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-top: 60rpx;
  position: relative;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  color: white;
  font-size: 32rpx;
}

.title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: white;
  font-size: 36rpx;
  font-weight: 600;
}

/* 用户信息卡片 */
.user-info-card {
  margin: 40rpx 30rpx;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 53, 0.15);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 绑定类型选择 */
.bind-type-section {
  margin: 0 30rpx 30rpx;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 53, 0.15);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.radio-item:last-child {
  margin-bottom: 0;
}

.radio-label {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* 表单卡片 */
.form-card {
  margin: 0 30rpx 30rpx;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 53, 0.15);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-label text {
  margin-right: 12rpx;
  font-size: 32rpx;
  color: #FF6B35;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #F8F9FA;
  border: 2rpx solid #E9ECEF;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #FF6B35;
  background: #FFF;
}

.form-input.error {
  border-color: #FF4757;
  background: #FFF5F5;
}

.form-input::placeholder {
  color: #ADB5BD;
}

/* 验证码行 */
.verify-code-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.verify-input {
  flex: 1;
}

.send-code-btn {
  width: 200rpx;
  height: 88rpx;
  background: #FF6B35;
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.send-code-btn.disabled {
  background: #CED4DA;
  color: #6C757D;
}

.send-code-btn:not(.disabled):active {
  background: #E55A2B;
  transform: scale(0.98);
}

/* 错误信息 */
.error-msg {
  color: #FF4757;
  font-size: 24rpx;
  margin-top: 12rpx;
  padding-left: 24rpx;
}

/* 提交区域 */
.submit-section {
  margin: 0 30rpx 40rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.3);
}

.submit-btn.loading {
  background: #CED4DA;
  box-shadow: none;
}

.submit-btn[disabled] {
  background: #CED4DA;
  box-shadow: none;
}

/* 安全提示 */
.security-tips {
  margin: 0 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 30rpx;
}

.tips-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-title text {
  margin-right: 12rpx;
  font-size: 32rpx;
  color: #FF6B35;
}

.tips-content {
  padding-left: 44rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .form-card {
    padding: 30rpx;
  }
  
  .user-info-card {
    padding: 30rpx;
  }
  
  .bind-type-section {
    padding: 30rpx;
  }
}

/* 动画效果 */
.form-input {
  animation: slideInUp 0.6s ease-out;
}

.form-item:nth-child(1) .form-input { animation-delay: 0.1s; }
.form-item:nth-child(2) .form-input { animation-delay: 0.2s; }
.form-item:nth-child(3) .form-input { animation-delay: 0.3s; }
.form-item:nth-child(4) .form-input { animation-delay: 0.4s; }

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}