/* pages/auth/register/register.wxss */
.register-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b35 100%);
  position: relative;
}

/* 顶部导航 */
.nav-bar {
  display: flex;
  align-items: center;
  padding: 44rpx 32rpx 20rpx;
  position: relative;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  color: white;
  font-size: 32rpx;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: white;
  font-size: 36rpx;
  font-weight: 600;
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx 40rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.step-circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.step-item.active .step-circle {
  background: white;
  color: #ff6b35;
}

.step-item.completed .step-circle {
  background: #4CAF50;
  color: white;
}

.step-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.step-item.active .step-text {
  color: white;
  font-weight: 600;
}

.step-line {
  width: 120rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 20rpx;
  margin-top: -42rpx;
  transition: all 0.3s ease;
}

.step-line.completed {
  background: #4CAF50;
}

/* 注册内容 */
.register-content {
  padding: 0 32rpx 40rpx;
}

/* 步骤内容 */
.step-content {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 步骤头部 */
.step-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.step-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 12rpx;
}

.step-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.change-account {
  color: #ff6b35;
  margin-left: 16rpx;
}

/* 表单样式 */
.register-form,
.verify-form {
  margin-bottom: 32rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.input-wrapper {
  position: relative;
  background: #f8f9fa;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #ff6b35;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(255, 107, 53, 0.1);
}

.input-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 16rpx;
}

.form-input {
  flex: 1;
  height: 88rpx;
  font-size: 28rpx;
  color: #333;
}

.password-toggle {
  font-size: 32rpx;
  color: #999;
  padding: 16rpx;
}

.resend-btn {
  background: none;
  border: none;
  color: #ff6b35;
  font-size: 24rpx;
  padding: 0;
  min-width: 120rpx;
  text-align: right;
}

.resend-btn[disabled] {
  color: #ccc;
}

.error-msg {
  color: #ff4757;
  font-size: 24rpx;
  margin-top: 12rpx;
  margin-left: 24rpx;
}

/* 用户协议 */
.agreement-section {
  margin-bottom: 40rpx;
}

.agreement-checkbox {
  display: flex;
  align-items: flex-start;
}

.checkbox-icon {
  font-size: 32rpx;
  color: #ddd;
  margin-right: 12rpx;
  margin-top: 4rpx;
}

.checkbox-icon.icon-check-circle-fill {
  color: #ff6b35;
}

.agreement-text {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.agreement-link {
  color: #ff6b35;
}

/* 按钮样式 */
.next-btn,
.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b35 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.3);
}

.next-btn[disabled],
.submit-btn[disabled] {
  opacity: 0.6;
}

/* 成功页面 */
.success-content {
  text-align: center;
  padding: 80rpx 32rpx;
}

.success-icon {
  margin-bottom: 32rpx;
}

.success-icon text {
  font-size: 120rpx;
  color: #4CAF50;
}

.success-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 16rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.success-tips {
  font-size: 24rpx;
  color: #999;
}

/* 登录提示 */
.login-tip {
  text-align: center;
  margin-top: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

.login-link {
  color: white;
  font-weight: 600;
  margin-left: 8rpx;
}

