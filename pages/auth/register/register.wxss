/* pages/auth/register/register.wxss */
.register-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b35 100%);
  position: relative;
}

/* 注册内容 */
.register-content {
  padding: 60rpx 32rpx 40rpx;
}

/* 注册头部 */
.register-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

/* 全局错误提示 */
.global-error {
  background: rgba(255, 71, 87, 0.9);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 71, 87, 0.3);
  animation: slideDown 0.3s ease-out;
}

.error-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.error-text {
  flex: 1;
  color: white;
  font-size: 26rpx;
  line-height: 1.4;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 表单样式 */
.register-form {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 32rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.label-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 输入框包装器 */
.input-wrapper {
  position: relative;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-wrapper:hover {
  background: #f0f2f5;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.input-wrapper.focused {
  border-color: #ff6b35;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(255, 107, 53, 0.1), 0 4rpx 16rpx rgba(255, 107, 53, 0.2);
  transform: translateY(-2rpx);
}

.input-wrapper.error {
  border-color: #ff4757;
  background: #fff5f5;
  box-shadow: 0 0 0 6rpx rgba(255, 71, 87, 0.1);
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.form-input::placeholder {
  color: #999;
  font-size: 26rpx;
}

/* 错误信息 */
.error-msg {
  color: #ff4757;
  font-size: 24rpx;
  margin-top: 12rpx;
  margin-left: 8rpx;
  display: flex;
  align-items: center;
  animation: fadeIn 0.3s ease-out;
}

.error-msg::before {
  content: "⚠️";
  margin-right: 8rpx;
  font-size: 20rpx;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #ff9a56 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.register-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.register-btn:hover::before {
  left: 100%;
}

.register-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.4);
}

.register-btn[disabled] {
  background: #ccc;
  box-shadow: none;
  transform: none;
}

.register-btn.loading {
  background: #ff8c42;
}

/* 登录链接 */
.login-link {
  text-align: center;
  margin-top: 32rpx;
  font-size: 26rpx;
  color: #666;
}

.link-text {
  color: #ff6b35;
  font-weight: 600;
  margin-left: 8rpx;
  text-decoration: underline;
}

/* 用户协议 */
.agreement {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.agreement-link {
  color: white;
  text-decoration: underline;
}

/* 返回提示 */
.back-tip {
  text-align: center;
}

.back-link {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  text-decoration: underline;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .register-content {
    padding: 40rpx 24rpx;
  }
  
  .register-form {
    padding: 32rpx 24rpx;
  }
  
  .form-input {
    height: 80rpx;
    font-size: 26rpx;
  }
  
  .register-btn {
    height: 80rpx;
    font-size: 30rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .register-form {
    background: #2c2c2c;
    color: #fff;
  }
  
  .form-label {
    color: #fff;
  }
  
  .input-wrapper {
    background: #3c3c3c;
  }
  
  .input-wrapper.focused {
    background: #4c4c4c;
  }
  
  .form-input {
    color: #fff;
  }
  
  .form-input::placeholder {
    color: #999;
  }
}