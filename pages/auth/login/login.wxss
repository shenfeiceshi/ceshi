/* pages/auth/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b35 100%);
  position: relative;
}

/* 顶部导航 */
.nav-bar {
  display: flex;
  align-items: center;
  padding: 44rpx 32rpx 20rpx;
  position: relative;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  color: white;
  font-size: 32rpx;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: white;
  font-size: 36rpx;
  font-weight: 600;
}

/* 登录内容 */
.login-content {
  padding: 40rpx 32rpx;
}

/* 登录头部 */
.login-header {
  text-align: center;
  margin-bottom: 80rpx;
  padding-top: 120rpx;
}

.logo-text {
  font-size: 60rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录方式切换 */
.login-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50rpx;
  padding: 8rpx;
  margin-bottom: 40rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 42rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
}

.tab-item.active {
  background: white;
  color: #ff6b35;
  font-weight: 600;
}

/* 登录表单 */
.login-form {
  margin-bottom: 40rpx;
}

/* 用户信息展示 */
.user-info {
  text-align: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.nickname {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
}

/* 授权区域 */
.auth-section {
  text-align: center;
}

.auth-tip {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 40rpx;
}

.tip-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 16rpx;
}

.tip-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.tip-desc {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
  display: block;
}

/* 微信登录按钮 */
.wechat-login-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.wechat-login-btn[disabled] {
  opacity: 0.6;
}

.wechat-icon {
  font-size: 32rpx;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  background: white;
  color: #ff6b35;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 40rpx;
}

.login-btn[disabled] {
  opacity: 0.6;
}

/* 不支持提示 */
.not-support {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 32rpx;
  text-align: center;
}

.not-support text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  display: block;
  margin-bottom: 8rpx;
}

.not-support text:last-child {
  margin-bottom: 0;
  font-size: 24rpx;
}

/* 用户协议 */
.agreement {
  text-align: center;
  margin-bottom: 40rpx;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  line-height: 1.5;
}

.agreement-link {
  color: white;
  text-decoration: underline;
}

/* 测试入口 */
.test-entry {
  text-align: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  margin-top: 40rpx;
}

.test-entry text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}