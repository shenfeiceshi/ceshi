/* pages/auth/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b35 100%);
  position: relative;
}

/* 顶部导航 */
.nav-bar {
  display: flex;
  align-items: center;
  padding: 44rpx 32rpx 20rpx;
  position: relative;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  color: white;
  font-size: 32rpx;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: white;
  font-size: 36rpx;
  font-weight: 600;
}

/* 登录内容 */
.login-content {
  padding: 40rpx 32rpx;
}

/* 登录头部 */
.login-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-text {
  font-size: 60rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录方式切换 */
.login-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50rpx;
  padding: 8rpx;
  margin-bottom: 40rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 42rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
}

.tab-item.active {
  background: white;
  color: #ff6b35;
  font-weight: 600;
}

/* 登录表单 */
.login-form {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.input-wrapper {
  position: relative;
  background: white;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.input-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 16rpx;
}

.form-input {
  flex: 1;
  height: 88rpx;
  font-size: 28rpx;
  color: #333;
}

.password-toggle {
  font-size: 32rpx;
  color: #999;
  padding: 16rpx;
}

.error-msg {
  color: #fff;
  font-size: 24rpx;
  margin-top: 12rpx;
  margin-left: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  display: inline-block;
}



/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  background: white;
  color: #ff6b35;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 40rpx;
}

.login-btn[disabled] {
  opacity: 0.6;
}

/* 微信登录 */
.wechat-login {
  text-align: center;
  margin-bottom: 40rpx;
}

.wechat-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 32rpx;
}

.wechat-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
}

.wechat-text {
  text-align: left;
}

.wechat-title {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.wechat-desc {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

.wechat-login-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.wechat-login-btn text {
  margin-right: 12rpx;
  font-size: 36rpx;
}

.wechat-login-btn[disabled] {
  opacity: 0.6;
}

/* 注册提示 */
.register-tip {
  text-align: center;
  margin-bottom: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

.register-link {
  color: white;
  font-weight: 600;
  margin-left: 8rpx;
}

/* 用户协议 */
.agreement {
  text-align: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 22rpx;
  line-height: 1.5;
}

.agreement-link {
  color: rgba(255, 255, 255, 0.9);
  text-decoration: underline;
}

/* 测试入口 */
.test-entry {
  text-align: center;
  margin-top: 40rpx;
  padding: 20rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
}

