/* 设置页面样式 */
.settings-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
  padding-bottom: 40rpx;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.header-left {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: white;
  font-weight: bold;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
}

.header-right {
  width: 80rpx;
}

/* 页面内容 */
.content {
  padding: 40rpx 30rpx;
}

/* 页面标题 */
.page-title {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 设置区域 */
.settings-section {
  margin-bottom: 40rpx;
}

.settings-card {
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.3s;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background-color: #f8f9fa;
}

.setting-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #ff8c42, #ff6b35);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
}

.setting-content {
  flex: 1;
  margin-right: 20rpx;
}

.setting-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #999;
}

.setting-value {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.4;
}

/* 头像预览 */
.avatar-preview {
  margin-right: 16rpx;
}

.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #f0f0f0;
}

/* 退出登录样式 */
.logout-item {
  border-top: 1rpx solid #f5f5f5;
  margin-top: 20rpx;
}

.logout-item .setting-icon {
  background: linear-gradient(135deg, #ff4d4f, #ff7875);
}

.logout-text {
  color: #ff4d4f !important;
}

/* 编辑弹窗 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.edit-modal.show {
  opacity: 1;
  visibility: visible;
}

.edit-content {
  width: 600rpx;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  transform: scale(0.9);
  transition: transform 0.3s;
}

.edit-modal.show .edit-content {
  transform: scale(1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.edit-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.edit-input:focus {
  border-color: #ff8c42;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.cancel:active {
  background: #e0e0e0;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #ff8c42, #ff6b35);
  color: white;
}

.modal-btn.confirm:active {
  opacity: 0.8;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .content {
    padding: 30rpx 20rpx;
  }
  
  .setting-item {
    padding: 28rpx 20rpx;
  }
  
  .setting-icon {
    width: 70rpx;
    height: 70rpx;
    font-size: 32rpx;
  }
  
  .setting-title {
    font-size: 30rpx;
  }
  
  .edit-content {
    width: 540rpx;
    padding: 30rpx;
  }
}

@media (min-width: 414px) {
  .content {
    padding: 50rpx 40rpx;
  }
  
  .setting-item {
    padding: 36rpx 40rpx;
  }
  
  .setting-icon {
    width: 90rpx;
    height: 90rpx;
    font-size: 40rpx;
  }
  
  .edit-content {
    width: 660rpx;
    padding: 50rpx;
  }
}