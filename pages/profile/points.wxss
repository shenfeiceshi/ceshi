/* 我的个人中心页面样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  padding-bottom: 100rpx;
}

/* 用户信息卡片 */
.user-card {
  background: white;
  margin: 40rpx 30rpx;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 53, 0.15);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-container {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #FF6B35;
}

.level-badge {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  background: #FF6B35;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: bold;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.points-display {
  display: flex;
  align-items: center;
  background: linear-gradient(90deg, #FF6B35, #F7931E);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  width: fit-content;
}

.points-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.points-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

/* 统计数据 */
.stats-container {
  display: flex;
  justify-content: space-between;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B35;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 功能菜单 */
.menu-container {
  background: white;
  margin: 30rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 53, 0.15);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #F8F9FA;
}

.menu-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 60rpx;
  text-align: center;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
}

.menu-arrow {
  margin-left: 20rpx;
}

.arrow-icon {
  font-size: 32rpx;
  color: #CCC;
  font-weight: bold;
}

/* 底部空白 */
.bottom-space {
  height: 60rpx;
}

