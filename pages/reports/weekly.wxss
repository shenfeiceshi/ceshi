/* 周报页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b35 50%, #f7931e 100%);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b35 100%);
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 154, 86, 0.3);
  position: relative;
  overflow: hidden;
}

.page-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
  backdrop-filter: blur(10rpx);
  pointer-events: none;
}

.header-content {
  flex: 1;
}

.report-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
}

.report-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  position: relative;
  z-index: 1;
}

.header-actions {
  display: flex;
  gap: 20rpx;
  position: relative;
  z-index: 1;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.action-icon {
  font-size: 36rpx;
  color: #ffffff;
}

/* 周期选择 */
.week-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.selector-btn {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #ff9a56, #ff6b35);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.selector-btn:active {
  transform: scale(0.95);
}

.selector-icon {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
}

.week-info {
  flex: 1;
  text-align: center;
  margin: 0 40rpx;
}

.week-range {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.week-desc {
  font-size: 24rpx;
  color: #666666;
}

/* 本周概览 */
.week-overview {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.overview-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.overview-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.overview-item {
  background: linear-gradient(135deg, #fff 0%, #f8f9ff 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  text-align: center;
  border: 2rpx solid rgba(255, 154, 86, 0.1);
  transition: all 0.3s ease;
}

.overview-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 86, 0.2);
}

.item-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.item-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b35;
  margin-bottom: 8rpx;
}

.item-label {
  font-size: 24rpx;
  color: #666666;
}

/* 任务完成情况 */
.task-progress {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.progress-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.progress-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.progress-content {
  margin-bottom: 32rpx;
}

.progress-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.stat-item {
  text-align: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

.progress-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff9a56, #ff6b35);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.task-categories {
  margin-top: 32rpx;
}

.category-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.category-name {
  font-size: 28rpx;
  color: #333333;
  width: 120rpx;
  margin-right: 24rpx;
}

.category-progress {
  flex: 1;
  display: flex;
  align-items: center;
}

.category-bar {
  flex: 1;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.category-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.category-text {
  font-size: 24rpx;
  color: #666666;
  min-width: 80rpx;
}

/* 积分变化趋势 */
.points-trend {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.trend-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.trend-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.trend-chart {
  margin-bottom: 32rpx;
}

.trend-canvas {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
}

.trend-summary {
  display: flex;
  justify-content: space-around;
}

.summary-item {
  text-align: center;
}

.summary-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
}

.summary-value.positive {
  color: #4CAF50;
}

.summary-value.negative {
  color: #f44336;
}

/* 本周亮点 */
.week-highlights {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.highlights-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.highlights-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.highlights-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.highlight-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff 0%, #f8f9ff 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 154, 86, 0.1);
}

.highlight-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  margin-top: 4rpx;
}

.highlight-content {
  flex: 1;
}

.highlight-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.highlight-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
  line-height: 1.5;
}

.highlight-date {
  font-size: 20rpx;
  color: #999999;
}

/* 本周日记精选 */
.week-diaries {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.diaries-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.diaries-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.diaries-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.diary-item {
  background: linear-gradient(135deg, #fff 0%, #f8f9ff 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(255, 154, 86, 0.1);
  transition: all 0.3s ease;
}

.diary-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(255, 154, 86, 0.15);
}

.diary-date {
  font-size: 24rpx;
  color: #ff6b35;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.diary-mood {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.mood-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.mood-name {
  font-size: 24rpx;
  color: #666666;
}

.diary-preview {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.diary-meta {
  display: flex;
  gap: 24rpx;
}

.meta-item {
  font-size: 20rpx;
  color: #999999;
  background: rgba(255, 154, 86, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

/* 成长建议 */
.growth-suggestions {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.suggestions-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.suggestions-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff 0%, #f8f9ff 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 154, 86, 0.1);
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  margin-top: 2rpx;
}

.suggestion-text {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
}

/* 下周目标 */
.next-week-goals {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.goals-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.goals-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.goals-list {
  margin-bottom: 32rpx;
}

.goal-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff 0%, #f8f9ff 100%);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid rgba(255, 154, 86, 0.1);
  transition: all 0.3s ease;
}

.goal-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(255, 154, 86, 0.15);
}

.goal-checkbox {
  margin-right: 20rpx;
}

.checkbox-icon {
  font-size: 32rpx;
}

.goal-text {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  margin-right: 16rpx;
}

.goal-reward {
  font-size: 24rpx;
  color: #ff6b35;
  font-weight: bold;
  background: rgba(255, 154, 86, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.add-goal-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #ff9a56, #ff6b35);
  border-radius: 16rpx;
  color: #ffffff;
  transition: all 0.3s ease;
}

.add-goal-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(255, 154, 86, 0.3);
}

.add-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.add-goal-btn text {
  font-size: 28rpx;
  font-weight: bold;
}

/* 分享和导出 */
.report-actions {
  margin: 0 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 86, 0.2);
}

.action-item .action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  color: #ff6b35;
}

.action-text {
  font-size: 24rpx;
  color: #333333;
  font-weight: bold;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 60rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f0f0f0;
  border-top: 6rpx solid #ff6b35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #333333;
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
}

.share-content {
  width: 100%;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.share-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 40rpx;
}

.share-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.share-option {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.share-option:active {
  background: #e9ecef;
  transform: translateY(-2rpx);
}

.share-option .share-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.share-text {
  font-size: 28rpx;
  color: #333333;
}

.share-cancel {
  text-align: center;
  padding: 32rpx;
  font-size: 28rpx;
  color: #666666;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.share-cancel:active {
  background: #e9ecef;
}