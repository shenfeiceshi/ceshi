/* 月报页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #3498db 0%, #2980b9 50%, #1f4e79 100%);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(52, 152, 219, 0.3);
  position: relative;
  overflow: hidden;
}

.page-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
  backdrop-filter: blur(10rpx);
  pointer-events: none;
}

.header-content {
  flex: 1;
  position: relative;
  z-index: 1;
}

.report-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.report-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.header-actions {
  display: flex;
  gap: 20rpx;
  position: relative;
  z-index: 1;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.action-icon {
  font-size: 36rpx;
  color: #ffffff;
}

/* 月份选择器 */
.month-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.selector-btn {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #3498db, #2980b9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(52, 152, 219, 0.3);
}

.selector-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(52, 152, 219, 0.4);
}

.selector-icon {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
}

.month-info {
  flex: 1;
  text-align: center;
}

.month-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.month-desc {
  font-size: 24rpx;
  color: #666666;
}

/* 月度成就 */
.monthly-achievements {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.achievements-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.achievements-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.achievements-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.achievement-item {
  background: linear-gradient(135deg, #fff 0%, #f0f8ff 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  text-align: center;
  border: 2rpx solid rgba(52, 152, 219, 0.1);
  transition: all 0.3s ease;
}

.achievement-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(52, 152, 219, 0.2);
}

.achievement-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.achievement-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #2980b9;
  margin-bottom: 8rpx;
}

.achievement-label {
  font-size: 24rpx;
  color: #666666;
}

.achievements-summary {
  background: linear-gradient(135deg, #fff 0%, #f0f8ff 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(52, 152, 219, 0.1);
}

.summary-text {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
  text-align: center;
}

/* 月度趋势 */
.monthly-trends {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.trends-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.trends-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.trends-chart {
  margin-bottom: 32rpx;
}

.trends-canvas {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
}

.trends-legend {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  gap: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: rgba(52, 152, 219, 0.1);
  border-radius: 12rpx;
}

.legend-color {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.legend-text {
  font-size: 20rpx;
  color: #666666;
}

/* 月度亮点 */
.monthly-highlights {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.highlights-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.highlights-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.highlights-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.highlight-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff 0%, #f0f8ff 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(52, 152, 219, 0.1);
}

.highlight-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  margin-top: 4rpx;
}

.highlight-content {
  flex: 1;
}

.highlight-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.highlight-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
  line-height: 1.5;
}

.highlight-date {
  font-size: 20rpx;
  color: #999999;
}

/* 月度日记精选 */
.monthly-diaries {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.diaries-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.diaries-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.diaries-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.diary-item {
  background: linear-gradient(135deg, #fff 0%, #f0f8ff 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(52, 152, 219, 0.1);
  transition: all 0.3s ease;
}

.diary-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(52, 152, 219, 0.15);
}

.diary-date {
  font-size: 24rpx;
  color: #2980b9;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.diary-mood {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.mood-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.mood-name {
  font-size: 24rpx;
  color: #666666;
}

.diary-preview {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.diary-meta {
  display: flex;
  gap: 24rpx;
}

.meta-item {
  font-size: 20rpx;
  color: #999999;
  background: rgba(52, 152, 219, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

/* 成长分析 */
.growth-analysis {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.analysis-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.analysis-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.analysis-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.analysis-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff 0%, #f0f8ff 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(52, 152, 219, 0.1);
}

.analysis-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  margin-top: 2rpx;
}

.analysis-text {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
}

/* 下月目标 */
.next-month-goals {
  margin: 0 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.goals-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.goals-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.goals-list {
  margin-bottom: 32rpx;
}

.goal-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff 0%, #f0f8ff 100%);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid rgba(52, 152, 219, 0.1);
  transition: all 0.3s ease;
}

.goal-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(52, 152, 219, 0.15);
}

.goal-checkbox {
  margin-right: 20rpx;
}

.checkbox-icon {
  font-size: 32rpx;
}

.goal-text {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  margin-right: 16rpx;
}

.goal-reward {
  font-size: 24rpx;
  color: #2980b9;
  font-weight: bold;
  background: rgba(52, 152, 219, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.add-goal-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #3498db, #2980b9);
  border-radius: 16rpx;
  color: #ffffff;
  transition: all 0.3s ease;
}

.add-goal-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(52, 152, 219, 0.3);
}

.add-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.add-goal-btn text {
  font-size: 28rpx;
  font-weight: bold;
}

/* 分享和导出 */
.report-actions {
  margin: 0 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(52, 152, 219, 0.2);
}

.action-item .action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  color: #2980b9;
}

.action-text {
  font-size: 24rpx;
  color: #333333;
  font-weight: bold;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-xl);
  padding: var(--spacing-xxl);
  background: var(--bg-white);
  border-radius: var(--radius-large);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f0f0f0;
  border-top: 6rpx solid #2980b9;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #333333;
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
}

.share-content {
  width: 100%;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.share-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 40rpx;
}

.share-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.share-option {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.share-option:active {
  background: #e9ecef;
  transform: translateY(-2rpx);
}

.share-option .share-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.share-text {
  font-size: 28rpx;
  color: #333333;
}

.share-cancel {
  text-align: center;
  padding: 32rpx;
  font-size: 28rpx;
  color: #666666;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.share-cancel:active {
  background: #e9ecef;
}