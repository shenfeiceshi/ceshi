/* 抽奖大厅页面样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FF6B35 0%, #F5C754 100%);
  padding: 32rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 48rpx;
  padding-top: 20rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 积分卡片 */
.points-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.coin-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.points-text {
  font-size: 30rpx;
  color: #1C170D;
  margin-right: 16rpx;
}

.points-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B35;
  flex: 1;
}

.points-detail-btn {
  background: #FF6B35;
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.detail-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.detail-text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 抽奖转盘容器 */
.lottery-wheel-container {
  display: flex;
  justify-content: center;
  margin-bottom: 48rpx;
}

.wheel-background {
  position: relative;
  width: 600rpx;
  height: 600rpx;
}

.lottery-wheel {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 10rpx solid #FFD700;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
  transition: transform 2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.lottery-wheel.spinning {
  animation: spin 2s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(1800deg);
  }
}

.wheel-pointer {
  position: absolute;
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 40rpx solid #FFD700;
  z-index: 10;
}

.wheel-center {
  position: absolute;
  top: calc(50% - 2rpx);
  left: calc(50% - 2rpx);
  transform: translate(-50%, -50%);
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #F5C754 100%);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.3);
  z-index: 20;
  /* 确保按钮完全居中 */
  margin: 0;
  padding: 0;
}

.center-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
  line-height: 1.2;
  margin: 0;
  padding: 0;
}

.center-cost {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
  text-align: center;
  line-height: 1.2;
}

/* 奖品展示区域 */
.prizes-section {
  margin-bottom: 48rpx;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-title text:last-child {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.prizes-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.prize-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.prize-image {
  display: block;
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.prize-name {
  display: block;
  font-size: 26rpx;
  color: #1C170D;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.prize-points {
  display: block;
  font-size: 24rpx;
  color: #FF6B35;
  font-weight: bold;
}

/* 最近中奖记录 */
.recent-records {
  margin-bottom: 48rpx;
}

/* 空状态样式 */
.recent-records-empty {
  margin-bottom: 48rpx;
}

.empty-hint {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 64rpx;
  display: block;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.records-list {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.record-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid rgba(229, 229, 229, 0.5);
}

.record-item:last-child {
  border-bottom: none;
}

.record-avatar {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.record-info {
  flex: 1;
}

.record-name {
  font-size: 30rpx;
  color: #1C170D;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.record-prize {
  font-size: 26rpx;
  color: #666666;
}

.record-time {
  font-size: 24rpx;
  color: #999999;
}

/* 底部操作按钮 */
.bottom-actions {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  min-width: 120rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-btn text:last-child {
  font-size: 24rpx;
  color: #1C170D;
  font-weight: 500;
}

/* 中奖弹窗 */
.prize-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.prize-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 48rpx;
  margin: 32rpx;
  text-align: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.prize-modal.show .modal-content {
  transform: scale(1);
  animation: celebrate 0.6s ease-in-out;
}

@keyframes celebrate {
  0% {
    transform: scale(0.8);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

.modal-header {
  margin-bottom: 32rpx;
}

.celebration-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1C170D;
}

.modal-body {
  margin-bottom: 48rpx;
}

.prize-modal-image {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.prize-modal-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1C170D;
  margin-bottom: 16rpx;
}

.prize-modal-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  justify-content: center;
}

.modal-btn {
  background: linear-gradient(135deg, #FF6B35 0%, #F5C754 100%);
  color: #FFFFFF;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 53, 0.4);
  transition: all 0.3s ease;
}

.modal-btn:active {
  transform: scale(0.95);
}