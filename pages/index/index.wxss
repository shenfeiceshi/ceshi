/* 首页样式 - 基于小六日记设计 */
.page-container {
  background: #FCFAF7; /* 来自 Figma fill_YKO06D */
  min-height: 100vh;
  padding: 32rpx; /* Figma 16px → 32rpx */
}

/* 页面标题 */
.page-title {
  font-size: 36rpx; /* Figma 18px → 36rpx */
  font-weight: 700;
  color: #1C170D; /* 来自 Figma fill_Q1B1LC */
  text-align: center; /* Figma 居中 */
  margin-bottom: 16rpx; /* Figma 底部间距约 8px → 16rpx */
}

/* 用户信息卡片 */
.user-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-md);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrap {
  padding: 24rpx 0;
}

.avatar-circle {
  width: 160rpx; /* 80px → 160rpx */
  height: 160rpx;
  border-radius: 50%;
  background: #F2E4D5; /* 头像淡色圆背景，贴近设计 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-info { text-align: center; }
.user-info.center { text-align: center; }

.username {
  font-size: 36rpx; /* 18px → 36rpx */
  font-weight: 700;
  color: #1C170D;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 28rpx; /* 14px → 28rpx */
  color: #7A6E5B;
  margin-bottom: 8rpx;
}

.points-text {
  font-size: 28rpx; /* 14px → 28rpx */
  color: #7A6E5B;
}

/* 登录提示样式 */
.login-prompt {
  text-align: center;
  margin-top: 16rpx;
}

.login-text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.login-button {
  background: linear-gradient(135deg, #FF6B35, #FF8A65);
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: inline-block;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.3);
  transition: all 0.2s ease;
}

.login-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 53, 0.3);
}

/* 每日任务完成度卡片 */
.task-progress-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-md);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.progress-title {
  font-size: 44rpx; /* Figma 22px → 44rpx */
  font-weight: 700;
  color: #1C170D;
}

.progress-count {
  font-size: var(--font-size-xxl);
  font-weight: 700;
  color: var(--color-primary);
}

.progress-bar-container {
  width: 100%;
}

.progress-bar {
  width: 100%;
  height: 16rpx; /* Figma 8px → 16rpx */
  background-color: #E8E0CF; /* 来自 Figma fill_76C2YJ */
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #F5C754; /* 来自 Figma fill_ANIRQ0 */
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 快速打卡区域 */
.quick-checkin-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-md);
}

.section-title {
  font-size: 44rpx; /* Figma 22px → 44rpx */
  font-weight: 700;
  color: #1C170D;
  margin-bottom: 24rpx; /* Figma 间距约 12px → 24rpx */
}

.checkin-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx; /* 12px → 24rpx */
}

.checkin-item {
  background: #F5C754;
  border-radius: 54rpx; /* 胶囊按钮，约 27px → 54rpx */
  height: 64rpx; /* 32px → 64rpx */
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border: none;
  transition: all 0.2s ease;
}

.checkin-item:active {
  transform: scale(0.97);
}

.checkin-item.completed {
  background: linear-gradient(135deg, var(--color-success) 0%, #73d13d 100%);
  color: white;
  border-color: var(--color-success);
}

.checkin-icon {
  width: var(--icon-size-xl);
  height: var(--icon-size-xl);
  margin-bottom: var(--spacing-sm);
}

.checkin-name {
  font-size: 28rpx; /* 14px → 28rpx */
  font-weight: 600;
  color: #1C170D;
}

.checkin-item.completed .checkin-name {
  color: white;
}

/* 心情记录区域 */
.mood-section-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-md);
}

.mood-subtitle {
  font-size: var(--font-size-md);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-md);
  text-align: center;
}

.mood-grid {
  display: flex;
  justify-content: space-between;
  gap: 24rpx; /* 12px → 24rpx */
}

.mood-item {
  flex: 1;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  text-align: center;
  border: 2rpx solid #E8E0CF; /* 来自 Figma stroke_NXZHF6 */
  transition: all 0.3s ease;
}

.mood-item:active {
  transform: scale(0.95);
}

.mood-item.selected {
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
  border-color: var(--color-primary);
  color: white;
}

.mood-emoji {
  font-size: 28rpx; /* Figma 14px → 28rpx */
  line-height: 1;
}

/* 心情提示文案 */
.mood-message {
  margin-top: 24rpx; /* 12px → 24rpx */
  text-align: center;
  font-size: 32rpx; /* Figma 16px → 32rpx */
  color: #1C170D; /* Figma 文案颜色 */
}

/* 全部任务完成状态 */
.all-completed-state {
  text-align: center;
  padding: 40rpx 20rpx;
}

.completed-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.completed-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1C170D;
  margin-bottom: 8rpx;
}

.completed-subtitle {
  font-size: 28rpx;
  color: #A58C5B;
}

/* 快捷操作区域 */
.quick-actions-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx 32rpx; /* 12px 16px → 24rpx 32rpx */
  box-shadow: var(--shadow-md);
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx; /* 12px → 24rpx */
}

.action-item {
  background: #F5C754; /* 来自 Figma fill_ANIRQ0 */
  border-radius: 24rpx; /* 12px → 24rpx */
  height: 80rpx; /* Figma 40px → 80rpx */
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #1C170D;
  font-size: 32rpx; /* 16px → 32rpx */
  font-weight: 600;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.98);
}

.action-name {
  font-size: var(--font-size-md);
  font-weight: 600;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .checkin-grid {
    grid-template-columns: 1fr;
  }
  
  .actions-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0 8rpx; /* Figma 顶部内边距 */
}

.header-spacer {
  width: 48rpx; /* 与右侧图标占位等宽，保证标题居中 */
  height: 48rpx;
}

.header-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1C170D;
  font-size: 32rpx;
}