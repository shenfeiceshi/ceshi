/**app.wxss**/

/* 全局样式 - 现代化渐变设计 */
page {
  background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 28rpx;
  color: #2d3748;
  line-height: 1.6;
}

/* 设计Token - 现代化蓝紫色渐变系统 */
:root {
  /* 主色调 - 蓝紫色渐变系 */
  --color-primary: #667eea;
  --color-primary-light: #8b9cf7;
  --color-primary-dark: #4c63d2;
  --color-secondary: #764ba2;
  --color-accent: #f093fb;
  
  /* 功能色 */
  --color-success: #52c41a;
  --color-warning: #faad14;
  --color-danger: #f5222d;
  --color-info: #1890ff;
  
  /* 文本颜色 */
  --color-text-primary: #2d3748;
  --color-text-secondary: #4a5568;
  --color-text-tertiary: #718096;
  --color-text-light: #a0aec0;
  --color-text-white: #ffffff;
  
  /* 背景色 - 现代化渐变系 */
  --color-bg-primary: #ffffff;
  --color-bg-secondary: #f7fafc;
  --color-bg-light: #edf2f7;
  --color-bg-card: #ffffff;
  --color-bg-gradient-light: rgba(102, 126, 234, 0.03);
  --color-bg-gradient-medium: rgba(102, 126, 234, 0.08);
  
  /* 边框色 */
  --color-border: rgba(102, 126, 234, 0.1);
  --color-border-light: rgba(102, 126, 234, 0.05);
  --color-border-medium: rgba(102, 126, 234, 0.15);
  --color-border-dark: rgba(102, 126, 234, 0.25);
  
  /* 渐变色 - 现代化蓝紫色系 */
  --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --gradient-secondary: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  --gradient-accent: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  --gradient-warm: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  --gradient-cool: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  
  /* 阴影 - 现代化蓝紫色系 */
  --shadow-sm: 0 2rpx 8rpx rgba(102, 126, 234, 0.08);
  --shadow-md: 0 4rpx 16rpx rgba(102, 126, 234, 0.12);
  --shadow-lg: 0 8rpx 32rpx rgba(102, 126, 234, 0.16);
  --shadow-xl: 0 12rpx 48rpx rgba(102, 126, 234, 0.20);
  --shadow-heavy: 0 16rpx 64rpx rgba(102, 126, 234, 0.25);
  
  /* 圆角 - 适合儿童的友好设计 */
  --border-radius-sm: 12rpx;
  --border-radius-md: 16rpx;
  --border-radius-lg: 24rpx;
  --border-radius-xl: 32rpx;
  --border-radius-round: 50rpx;
  
  /* 间距 */
  --spacing-xs: 12rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --spacing-xxl: 64rpx;
  
  /* 字体大小 */
  --font-size-xs: 20rpx;
  --font-size-sm: 24rpx;
  --font-size-md: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-xxl: 48rpx;
  
  /* 图标大小 */
  --icon-size-sm: 28rpx;
  --icon-size-md: 36rpx;
  --icon-size-lg: 48rpx;
  --icon-size-xl: 64rpx;
  
  /* 头像大小 */
  --avatar-size-sm: 60rpx;
  --avatar-size-md: 80rpx;
  --avatar-size-lg: 120rpx;
  --avatar-size-xl: 160rpx;
  
  /* 边框宽度 */
  --border-width-thin: 1rpx;
  --border-width-medium: 2rpx;
  --border-width-thick: 4rpx;
  --border-width-heavy: 6rpx;
}

/* 主题色彩类 */
.primary-color {
  color: var(--color-primary);
}

.secondary-color {
  color: var(--color-secondary);
}

.accent-color {
  color: var(--color-accent);
}

.bg-primary {
  background: var(--gradient-primary);
}

.bg-secondary {
  background-color: var(--color-secondary);
}

.bg-accent {
  background-color: var(--color-accent);
}

.bg-light {
  background-color: var(--color-bg-secondary);
}

.bg-warm {
  background: var(--gradient-warm);
}

/* 通用容器 */
.container {
  padding: var(--spacing-md);
}

.page-container {
  min-height: 100vh;
  background: var(--gradient-warm);
  padding: var(--spacing-lg);
}

/* 卡片样式 - 现代化渐变设计 */
.card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-md);
  margin-bottom: var(--spacing-lg);
  overflow: hidden;
  border: var(--border-width-thin) solid var(--color-border);
  backdrop-filter: blur(20rpx);
}

.card-warm {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  margin-bottom: var(--spacing-lg);
  overflow: hidden;
  border: var(--border-width-thin) solid var(--color-border);
  backdrop-filter: blur(20rpx);
}

.card-header {
  padding: var(--spacing-lg);
  border-bottom: var(--border-width-thin) solid var(--color-border);
  background: var(--color-bg-gradient-light);
}

.card-body {
  padding: var(--spacing-lg);
}

.card-footer {
  padding: var(--spacing-md) var(--spacing-lg);
  background-color: var(--color-bg-light);
  border-top: var(--border-width-thin) solid var(--color-border);
}

/* 按钮样式 - 现代化交互设计 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: 20rpx;
  font-size: var(--font-size-md);
  font-weight: 500;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: none;
  cursor: pointer;
  gap: var(--spacing-xs);
}

.btn-primary {
  background: var(--gradient-primary);
  color: var(--color-text-white);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.btn-secondary {
  background: var(--color-bg-card);
  color: var(--color-text-primary);
  border: var(--border-width-thin) solid var(--color-border);
  box-shadow: var(--shadow-sm);
}

.btn-secondary:active {
  background: var(--color-bg-light);
  transform: scale(0.98);
}

.btn-outline {
  background: transparent;
  color: var(--color-primary);
  border: var(--border-width-thin) solid var(--color-primary);
}

.btn-outline:active {
  background: var(--color-bg-gradient-light);
  transform: scale(0.98);
}

.btn-round {
  border-radius: var(--border-radius-round);
  width: 80rpx;
  height: 80rpx;
  padding: 0;
}

.btn-large {
  padding: var(--spacing-md) var(--spacing-xl);
  font-size: var(--font-size-lg);
  border-radius: var(--border-radius-lg);
}

.btn-small {
  padding: var(--spacing-xs) var(--spacing-sm);
  font-size: var(--font-size-sm);
  border-radius: var(--border-radius-sm);
}

/* 文本样式 */
.text-primary {
  color: var(--color-text-primary);
}

.text-secondary {
  color: var(--color-text-secondary);
}

.text-tertiary {
  color: var(--color-text-tertiary);
}

.text-light {
  color: var(--color-text-light);
}

.text-white {
  color: var(--color-text-white);
